# ========================================
# BizOps Website - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ========================================
# 1. MONITORING & ERROR TRACKING
# ========================================

# Sentry (Error Monitoring & Performance)
# Get your DSN from: https://sentry.io/settings/projects/
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=1.0
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# LogRocket (Session Replay & Analytics)
# Get your App ID from: https://app.logrocket.com/
VITE_LOGROCKET_APP_ID=

# Datadog RUM (Real User Monitoring)
# Get credentials from: https://app.datadoghq.com/
VITE_DATADOG_APPLICATION_ID=
VITE_DATADOG_CLIENT_TOKEN=
VITE_DATADOG_SITE=datadoghq.com
VITE_DATADOG_SERVICE=bizops-website
VITE_DATADOG_ENV=production

